generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userid   Int    @unique
  email    String @unique
  password String

  notes Note[]
}

model Note {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  noteid   Int     @unique
  title    String
  content  String
  color    String
  date     String
  userid   Int

  user User @relation(fields: [userid], references: [userid])
}

